<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressBar" parent="AppTheme">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
    <style name="MainTextViewStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:padding">@dimen/dimen_2dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NormalTextViewStyle" parent="MainTextViewStyle">
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:textStyle">normal</item>

    </style>

</resources>
